@model Ulx.Models.RegisterVM

<form method="post" asp-action="Register">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="border p-3">
        <div class="row">
            <div class="col-8">
                <div class="row mb-3  g-3 align-items-center">
                    <div class="col-3">
                        <label for="Email" class="form-label">Email address</label>
                    </div>
                    <div class="col-4">
                        <input type="email" class="form-control" id="Email" aria-describedby="emailHelp" asp-for="Email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-3">
                        <label for="Password" class="form-label">Password</label>
                    </div>
                    <div class="col-4">
                        <input type="password" class="form-control" id="Password" asp-for="Password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-3">
                        <label for="ConfirmPassword" class="form-label">Confirm Password</label>
                    </div>
                    <div class="col-4">
                        <input type="password" class="form-control" id="ConfirmPassword" asp-for="ConfirmPassword">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-3">
                        <label for="Name" class="form-label">Name</label>
                    </div>
                    <div class="col-4">
                        <input type="text" class="form-control" id="Name" asp-for="Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-3">
                        <label for="Phone" class="form-label">Phone</label>
                    </div>
                    <div class="col-4">
                        <input type="text" class="form-control" id="Phone" asp-for="Phone">
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <button type="submit" class="btn btn-primary">Submit</button>
                            <a class="btn btn-primary">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>